{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/bin/uxp-cli.js",
            "args": [
                "upload",
                "${input:js}",
                "${input:package}",
                "${input:url}",
                "${input:apikey}"
            ],
            // "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ],
    "inputs": [
		{
            "id": "js",
			"type":"promptString",
			"default": "/tmp/doit/dist/main.js",
			"description": "Script"
        },
        {
            "id": "package",
			"type":"promptString",
			"default": "/tmp/doit/package.json",
			"description": "Package.json File"
        },
        {
            "id": "url",
			"type":"promptString",
			"default": "http://lucy1.local:5000",
			"description": "iviva Url"
        },
        {
            "id": "apikey",
			"type":"promptString",
			"default": "SC:lucy1:0a54e97781330018",
			"description": "APi Key"
		},
	]
}